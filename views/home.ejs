<%- include("partials/header") %>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
  <h1><%= post.title %> </h1>

  <% let dots = "" %>
  <% if (post.content.length >= 100) { %>
    <% dots = "..."; %> 
  <% } %>

  <% const postURL = "/posts/" + post._id %>
  <p> <%= post.content.substring(0, 100) + dots %> <a href=<%= postURL %> >Read More</a></p>
<% }); %>

<%- include("partials/footer") %> 
